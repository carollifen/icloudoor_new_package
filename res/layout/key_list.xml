<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_bar_key_list"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        layout="@layout/title_bar_key_list" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#f8f8f8" >

        <RelativeLayout
            android:id="@+id/key_list_switch"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_centerInParent="true" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/select_auth"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                     />

                <RelativeLayout
                    android:id="@+id/select_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                     />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/select_auth_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钥匙授权" />

                <TextView
                    android:id="@+id/select_list_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钥匙列表" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" 
        />
    
    <FrameLayout
        android:id="@+id/key_list_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

