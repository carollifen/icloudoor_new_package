<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/wuyedialog_bg"
   
    >
    
       <RelativeLayout 
            android:id="@+id/tx_01"
          android:layout_width="match_parent"
          android:layout_height="110.5dp"
          android:gravity="center" >
             <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:textSize="18sp"
			android:layout_centerInParent="true"
            android:textColor="#333333"
            android:gravity="left"
            android:lineSpacingExtra="6dp"
            android:text="认证后即可享受此高级功能，\n赶快找物业认证吧！"
            />
       </RelativeLayout>
        
        
        <View 
            android:id="@+id/view0"
            android:layout_below="@id/tx_01"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc"/>
        
        <TextView
            android:layout_below="@id/view0" 
            android:id="@+id/id_queding"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:text="确定"
            android:textSize="18sp"
           android:textColor="@color/selector_wuyedialog_textbg"
            android:background="@drawable/selsector_diaolog_bg"
            android:gravity="center"/>
       
   

</RelativeLayout>
