<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/dialog_business_crad_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/msg_tx"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333333"
            android:text="手机开门需先进行身份验证,马上进行验证？"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel_bnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_cancel_bg"
                android:text="@string/cancel"
                android:textColor="#007aff"
                android:textSize="16sp" />

            <Button
                android:id="@+id/ok_bnt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/card_ok_bg"
                android:text="@string/ok"
                android:textColor="#007aff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>