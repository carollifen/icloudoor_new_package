<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:background="#0065a1"
    android:orientation="vertical"
    >
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#267caf" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp" 
        android:background="#0cffffff"
        android:orientation="horizontal"
        >
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" >
                
                <ImageView
                    android:id="@+id/weather_btn_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/btn_left" />
                
                <TextView
                    android:id="@+id/weather_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:gravity="center_vertical"
                    android:text="24 C"
                    android:textSize="35sp"
                    android:textColor="#ffffff" />
                
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp" >
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/divide_bar" />
                
                <TextView
                    android:id="@+id/weather_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="13dp"
                    android:text="多云"
                    android:textSize="12sp"
                    android:textColor="#ffffff" />
                
            </RelativeLayout>
            
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            
            <ImageView 
                android:id="@+id/weather_btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_right"
                />
            
            <RelativeLayout
                android:layout_width="135dp"
                android:layout_height="33dp"
                android:layout_centerVertical="true"
                >
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宜    "
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/weather_yi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"  
 						android:focusable="true" 
 						android:marqueeRepeatLimit="marquee_forever"  
						android:scrollHorizontally="true"  
						android:singleLine="true" 
                        android:text="内容 "
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                    
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true" >
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="忌    "
                        android:textColor="#ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/weather_ji"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"  
 						android:focusable="true" 
 						android:marqueeRepeatLimit="marquee_forever"  
						android:scrollHorizontally="true"  
						android:singleLine="true" 
                        android:text="内容 "
                        android:textColor="#ffffff"
                        android:textSize="12sp" />
                    
                </LinearLayout>
                
<!--                 <TextView -->
<!--                     android:id="@+id/weather_ji" -->
<!--                     android:layout_width="match_parent" -->
<!--                     android:layout_height="wrap_content" -->
<!--                     android:layout_alignParentBottom="true" -->
<!--                     android:ellipsize="end" -->
<!--                     android:maxLines="1" -->
<!--                     android:text="忌    " -->
<!--                     android:textSize="12sp" -->
<!--                     android:textColor="#ffffff" /> -->
                
            </RelativeLayout>
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#267caf" />

</LinearLayout>
