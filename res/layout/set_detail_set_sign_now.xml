<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   android:background="#f8f8f8" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        layout="@layout/title_bar_set_detail_set_sign" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        
        
        android:orientation="vertical" >

      <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="47dp"
     
         >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="10dp"
             android:textColor="#333333"
            android:textSize="15sp"
            android:text="手势密码"
            
           />
		
        <ImageView
            android:id="@+id/btn_sign_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/btn_yes" />

       
    </RelativeLayout>
    
     <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

      

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="修改手势密码"
                 android:textColor="#333333"
            android:textSize="15sp" />
            
            <RelativeLayout
                android:id="@+id/btn_change_sign"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >
            </RelativeLayout>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                />
            
        </RelativeLayout>
<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />


        <RelativeLayout
            android:id="@+id/forget_layout"
            android:layout_width="match_parent"
            android:layout_height="47dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="忘记手势密码"
                android:textColor="#333333"
            android:textSize="15sp"/>
            
            <RelativeLayout
                android:id="@+id/btn_forget_sign"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true" >
            </RelativeLayout>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/new_right"
                android:layout_alignParentRight="true"
                android:layout_marginRight="14dp"
                android:layout_centerVertical="true"
                />
            
        </RelativeLayout>
          <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd" />

    </LinearLayout>


</LinearLayout>