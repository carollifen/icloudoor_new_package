        android:text="个人信息"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <RelativeLayout 
        android:id="@+id/tomodify_person_info"
        android:layout_width="66dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        >
        
        
    </RelativeLayout>
    
</RelativeLayout>
